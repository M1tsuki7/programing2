from num2words import num2words

class NumberOutOfRangeError(Exception):
    pass

class NumberToWordConverter:
    MIN_NUMBER = 0
    MAX_NUMBER = 999

    @classmethod
    def convert(cls, number: int) -> str:
        if not cls.MIN_NUMBER <= number <= cls.MAX_NUMBER:
            raise NumberOutOfRangeError(f"Number must be between {cls.MIN_NUMBER} and {cls.MAX_NUMBER}")
        return num2words(number)

while True:
    try:
        number = int(input("Enter a number between 0 and 999: "))
        word = NumberToWordConverter.convert(number)
        print(word)
    except ValueError:
        print("Invalid input")
    except NumberOutOfRangeError as e:
        print(e)
